 1 file changed, 3 insertions(+)

diff --git a/tools/imx-setup-release.sh b/tools/imx-setup-release.sh
index 812c99c60..aaa7e7873 100755
--- a/tools/imx-setup-release.sh
+++ b/tools/imx-setup-release.sh
@@ -197,6 +197,9 @@ if [ -d ../sources/meta-ivi ]; then
     echo "BBLAYERS += \"\${BSPDIR}/sources/meta-ivi/meta-ivi-test\"" >> $BUILD_DIR/conf/bblayers.conf
 fi
 
+echo "" >> conf/bblayers.conf
+echo "BBLAYERS += \"\${BSPDIR}/sources/meta-einfochips-ap1302\"" >> conf/bblayers.conf
+
 echo BSPDIR=$BSPDIR
 echo BUILD_DIR=$BUILD_DIR
 
